<?xml version="1.0" encoding="UTF-8"?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<?page zscriptLanguage="GroovyGrails"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

<window id="wnd" apply="test.indexComposer">
    <style>
        .strike { text-decoration: line-through; }
    </style>

    <hbox>
        <image src="${z.resource(dir:'images', file:'grails_logo.png')}"/>
    </hbox>
    
    <vbox id="scaffoldingBox"/>
    
    <vbox width="250px">
        <hbox>
            ToDo: <textbox id="txtToDo" /> <button id="btnAdd" label="add" />
        </hbox>
        <listbox id="lstToDo" multiple="true" width="200">
        </listbox>
    </vbox>

</window>

</zk>